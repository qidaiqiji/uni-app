.lock-end {
  margin-bottom: 160rpx;
}
.album-detail-page {
  background: #f3f3f3;
}
.album-title-box {
  position: absolute;
  z-index: 2;
  left: 26rpx;
  bottom: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #ffffff;
}
.album-title-box .title {
  font-weight: 700;
  display: block;
  font-size: 38rpx;
}
.album-title-box .desc {
  display: block;
  font-size: 24rpx;
  margin-top: 16rpx;
}
.album-look-number {
  position: absolute;
  z-index: 2;
  right: 26rpx;
  bottom: 26rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #ffffff;
  padding-left: 35rpx;
  background-image: url(data:image/png;base64,);
  background-position: left center;
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
}
.album-detail-head {
  position: relative;
  overflow: hidden;
  height: 330rpx;
}
.album-detail-head .img-box {
  width: 100%;
  height: 100%;
}
.album-detail-head .bg-image {
  width: 100%;
  height: 100%;
}
.album-detail-head .bottom-box {
  bottom: 0;
  position: absolute;
  width: 100%;
  height: 160rpx;
}
.album-detail-head .bottom-box-mask {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: -webkit-gradient(linear, left bottom, left top, from(#000000), to(rgba(0, 0, 0, 0)));
  background: -webkit-linear-gradient(bottom, #000000 0%, rgba(0, 0, 0, 0) 100%);
  background: -o-linear-gradient(bottom, #000000 0%, rgba(0, 0, 0, 0) 100%);
  background: linear-gradient(0deg, #000000 0%, rgba(0, 0, 0, 0) 100%);
  opacity: 0.5;
}
.album-detail-goods-list {
  margin-top: 20rpx;
  overflow: hidden;
  background: #ffffff;
}

