.body {
  width: 702rpx;
  margin: auto;
  margin-top: 40rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #2f3a40;
}
.body .title {
  display: block;
  font-size: 28rpx;
  color: #2f3a40;
  margin-bottom: 14rpx;
}
.body .image-box {
  width: 100%;
  text-align: center;
}
.body .goods-image {
  position: relative;
  width: 506rpx;
  height: 506rpx;
  max-width: 100%;
  margin: auto;
  display: inline-block;
}
.body .goods-image .image {
  width: 100%;
  height: 506rpx;
}
.body .goods-title {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #2f3a40;
  margin-top: 14rpx;
}
.body .goods-text {
  display: block;
  font-size: 28rpx;
  color: #889696;
  text-align: left;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.body .icon_user_buy {
  position: relative;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}
.rank-detail-page {
  overflow: hidden;
  background: #f3f3f3;
}
.rank-detail-page .content {
  background: #fff;
}
.rank-detail-page .head {
  overflow: hidden;
  width: 100%;
  height: 240rpx;
}
.rank-detail-page .head .image {
  width: 100%;
  height: 240rpx;
}
.rank-detail-page .child {
  position: relative;
  width: 100%;
  text-align: center;
}
.rank-detail-page .goods-list {
  margin-top: 20rpx;
  overflow: hidden;
  background: #fff;
}

