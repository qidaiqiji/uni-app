.group-ls {
  margin-top: 0rpx;
}
.group-it {
  margin-bottom: 0rpx;
}
.group-it .header {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  background: #e9f3f5;
  padding: 0 24rpx;
}
.group-it .header .fl {
  float: left;
  color: #2f3a40;
}
.group-it .header .fr {
  float: right;
  color: #889696;
}
.group-it .foot {
  overflow: hidden;
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: #2f3a40;
  background: #ffffff;
  border-bottom: 1px solid #e9f3f5;
  line-height: 1;
}
.group-it .foot .number {
  line-height: 48rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #ff3366;
}
.group-it .botton {
  border: 1px solid #ff3366;
  background: #ffffff;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  overflow: hidden;
  text-align: center;
  padding: 10rpx 15rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  display: inline-block;
  vertical-align: top;
  cursor: pointer;
}
.group-it .btn-wuliu {
  color: #2f3a40;
  border: 1px solid #a8b6b8;
}
.group-it .btn-sure {
  color: #ffffff;
  background: #ff3366;
  border: 1px solid #ff3366;
  margin-left: 12rpx;
}
.order-ls {
  overflow: hidden;
}
.order-it {
  overflow: hidden;
}
.order-it .header {
  padding: 0 24rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  background: #ffffff;
  color: #889696;
  border-bottom: 1px solid #e9f3f5;
}
.order-it .body {
  overflow: hidden;
  padding: 30rpx 24rpx;
  background: #ffffff;
  border-bottom: 1px solid #e9f3f5;
}
.order-it .body-item {
  overflow: hidden;
  margin-bottom: 10rpx;
}
.order-it .img-box {
  position: relative;
  overflow: hidden;
  width: 130rpx;
  height: 130rpx;
  background: #ffffff;
  border: 1px solid #e9f3f5;
  -webkit-border-radius: 6rpx;
          border-radius: 6rpx;
  float: left;
  text-align: center;
  margin-right: 20rpx;
}
.order-it .img-box .img {
  width: 130rpx;
  height: 130rpx;
  margin: auto;
}
.order-it .img-box .text {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(255, 51, 102, 0.6);
  text-align: center;
  padding: 4rpx 0;
  color: #ffffff;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
.order-it .info-box {
  float: left;
  width: 340rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #2f3a40;
}
.order-it .fr-box {
  float: right;
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #2f3a40;
  text-align: right;
}
.order-it .fr-box_text {
  display: block;
  color: #889696;
}
.scroll-view_H {
  white-space: nowrap;
  width: 100%;
  height: 135rpx;
}
.scroll-view_H .img-box {
  float: unset;
  display: inline-block;
}
.scroll-view_H .isWuliao {
  border: 1px solid #53a7fd;
}
.scroll-view_H .isWuliao .text {
  background: #53a7fd;
}
.scroll-view_H .isGift {
  border: 1px solid #ff5c85;
}

.order-empty {
  position: absolute;
  width: 451rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -70%);
  -ms-transform: translate(-50%, -70%);
  transform: translate(-50%, -70%);
  text-align: center;
}
.order-empty .text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #889696;
  margin-top: 50rpx;
}
.order-page {
  overflow: hidden;
}
.order-page .top-header {
  position: fixed;
  width: 100%;
  height: 88rpx;
  z-index: 8;
}
.order-page .empty-header {
  height: 88rpx;
}
.order-page .body {
  margin: 0;
}

