.jforder-page {
  overflow: hidden;
  padding-bottom: 60rpx;
  min-height: 1200rpx;
  background: #f3f3f3;
}
.jforder-content {
  font-size: 20rpx;
  width: 702rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 32rpx;
}
.jforder-content .item {
  background: #fff;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  font-size: 20rpx;
}
.jforder-content .item-head {
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  background: #ffffff;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #2f3a40;
  padding: 0 24rpx;
  margin-bottom: 12rpx;
}
.jforder-content .item-head .i {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #889696;
  font-style: normal;
  margin-left: 32rpx;
}
.jforder-content .item .title {
  display: block;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #2f3a40;
  line-height: 30rpx;
  margin-bottom: 30rpx;
}
.jforder-content .item .price {
  display: block;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #889696;
  line-height: 30rpx;
}
.jforder-content .item .num {
  float: right;
}
.jforder-content .item-body {
  font-size: 20rpx;
  margin-bottom: 24rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 0 24rpx;
}
.jforder-content .item-body .img {
  max-width: 100%;
  max-height: 100%;
}
.jforder-content .item-body .fl {
  width: 150rpx;
  height: 150rpx;
  font-size: 20rpx;
}
.jforder-content .item-body .fr {
  margin-left: 20rpx;
  width: 520rpx;
  font-size: 20rpx;
}
.jforder-content .item-foot {
  border-top: 1px solid #dce4e6;
  min-height: 70rpx;
  line-height: 70rpx;
  text-align: right;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.jforder-content .item .text {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
.jforder-content .item .wait {
  color: #ff3366;
}
.jforder-content .item .tips {
  color: #3a444a;
}
.tips-text {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  background: #ffffff;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #ff3366;
}

