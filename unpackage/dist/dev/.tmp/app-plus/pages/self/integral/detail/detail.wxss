.jfdetail-page {
  overflow: hidden;
  width: 100%;
  min-height: 1228rpx;
  background: #f3f3f3;
}
.jfdetail-header {
  background: #fff;
  position: fixed;
  z-index: 2;
  width: 100%;
  height: 90rpx;
}
.jfdetail-content {
  overflow: hidden;
  margin-top: 122rpx;
}
.jfdetail-content .item {
  position: relative;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 30rpx 25rpx;
  min-height: 132rpx;
  border-bottom: 1px solid #dce4e6;
  background: #ffffff;
}
.jfdetail-content .title {
  display: block;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #2f3a40;
  line-height: 30rpx;
  margin-bottom: 22rpx;
}
.jfdetail-content .info {
  display: block;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #889696;
  line-height: 30rpx;
  margin-bottom: 12rpx;
}
.jfdetail-content .info .li {
  display: block;
}
.jfdetail-content .timer {
  display: block;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #b2b2b2;
  line-height: 30rpx;
}
.jfdetail-content .score {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #ff3366;
  line-height: 30rpx;
  position: absolute;
  right: 25rpx;
  top: 50%;
  -webkit-transform: translate(0, -50%);
  -ms-transform: translate(0, -50%);
  transform: translate(0, -50%);
}

